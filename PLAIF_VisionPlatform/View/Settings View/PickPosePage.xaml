<Page x:Class="PLAIF_VisionPlatform.View.Settings_View.PickPosePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLAIF_VisionPlatform.View.Settings_View"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      xmlns:vm="clr-namespace:PLAIF_VisionPlatform.ViewModel.Settings"
      Title="PickPosePage">

    <Page.DataContext>
        <vm:PickposeViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <StackPanel>
                <Button Margin="10" Content="Import polygon file of the object (*.ply)" FontSize="14" Height="30" Command="{Binding ImportPlyClick}"></Button>
                <Button Margin="10 5" Content="(Pick pose 3D View)" Foreground="DarkBlue" FontSize="20" Height="200"></Button>
                <TextBlock Text="Pick poses list" Margin="10 5 0 0" FontSize="14"/>
                <ListView Margin="10 5 0 5" Height="150" FontSize="14" ItemsSource="{Binding PickPoses}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="x" DisplayMemberBinding="{Binding X}" Width="53"/>
                            <GridViewColumn Header="y" DisplayMemberBinding="{Binding Y}" Width="53"/>
                            <GridViewColumn Header="z" DisplayMemberBinding="{Binding Z}" Width="53"/>
                            <GridViewColumn Header="rx" DisplayMemberBinding="{Binding RX}" Width="53"/>
                            <GridViewColumn Header="ry" DisplayMemberBinding="{Binding RY}" Width="53"/>
                            <GridViewColumn Header="rz" DisplayMemberBinding="{Binding RZ}" Width="53"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Add" Margin="10 5 10 0" FontSize="14" Width="80" Height="30" Command="{Binding AddClick}"/>
                    <Button Content="Delete" Margin="10 5 10 0" FontSize="14" Width="80" Command="{Binding DelClick}"/>
                    <Button Content="Modify" Margin="10 5 10 0" FontSize="14" Width="80" Command="{Binding ModClick}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
